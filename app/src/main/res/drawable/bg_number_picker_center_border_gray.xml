<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryBackgroundColor" />
        </shape>
    </item>
    <item android:bottom="0.5dp" android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/light_gray" />
            <solid android:color="@color/primaryBackgroundColor" />
        </shape>
    </item>
</layer-list>

