                    android:textColor="@color/setting_labels"
                    android:textSize="16sp" />

                <com.music.chords.custom.MyTextView
                    android:id="@+id/tv_autoScrollSubtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/settings_font_size"
                    android:textColor="@color/setting_subtitles"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_autoScrollArrow"
                android:layout_width="20dp"
